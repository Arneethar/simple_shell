#include "main.h"
/**
 * tokenizeur - function to parse string into tokens
 * @str: String to be parsed
 * @delim: delimiter
 * Return: array of pointers to tokens
 */

char **tokenizeur(char *str, const char *delim)
{
  int i = 0;
  char *str_1 = NULL, *str_2 = NULL, *ptr = NULL, **contain = NLL;

  if (!(str) || !(delim))
    return (NULL);

  str_1 = _strdup(str);
  str_2 = _strdup(str);

  if (!(str_1) || !(str_2))
    return (NULL);

  ptr = strtok(str_1, delim);
  if (ptr == NULL)
    return (NULL);

  for (i = 0; ptr!=NULL; i++)
    {
      ptr = strtok(NULL, delim);
    }
  contain = malloc(sizeof(char*) * (i + 1));
  if (contain == NULL)
    return (NULL);

  ptr = strtok(str_2, delim);
  if (ptr == NULL)
    return (NULL);

  for (i = 0; ptr != NULL
